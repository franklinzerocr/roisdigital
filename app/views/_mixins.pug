mixin social_sidebar(socialinks)
	div.social-links-container.right-sided.vertical-middle
		ul.social-links
			each link in socialinks
				li
					a(href=link.ContentDescription_Description, target='_blank', title=link.ContentDescription_Name attr-link=link.ContentDescription_Description)
						- if (link.ContentDescription_Name=='messenger') 
							i(class='fa fa-2x fa-commenting')
						- else 							
							i(class='fa fa-2x fa-'+link.ContentDescription_Name)
						
						

