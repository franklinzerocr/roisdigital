html(lang="es")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title #{view.title} | #{settings.siteName}
    //- link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css")
    //- link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.1.0/css/all.css")
    link(rel="stylesheet", href="/plugins/font-awesome/css/font-awesome.min.css")
    link(rel="stylesheet", href="/stylesheets/bootstrap.css")
    link(rel="stylesheet", href="/stylesheets/site.css")
block header
    include _helpers.pug
    include _mixins.pug
    - logoType =  layout.header.data[0].Medias[0]
    - secundaryRoisAnimations = layout.header.data[1].Medias
    - secundaryRoisTexts = layout.header.data[1].Descriptions
    body
        header.container-fluid.header-container
            div.container
                div.logo-container.col-md-5
                    a(href='/')
                        img#header_logo(src=logoType.Multimedia_Path, alt=logoType.Multimedia_Description)
                    span.rois-logo-line
                    span.rois-logo-dot
                //- SECUNDARY ROIS
                div.secundary-rois-container.col-md-5
                    div.animation-container
                        div.itsatrap.full-size
                        each animation in secundaryRoisAnimations
                            img(class='animate secundary-rois pos-'+animation.MediaContent_Position, src=animation.Multimedia_Path, alt=animation.Multimedia_Description)
                    div.text-container.secundary-rois
                        div.shadow-container.secundary-rois
                            div.figure-box.secundary-rois
                        each text in secundaryRoisTexts
                            h5(class='text secundary-rois pos-'+text.ContentDescription_Position)= text.ContentDescription_Description
                //- END OF SECUNDARY ROIS
                div.menu-container.col-md-7
                    ul#header_menu
                        each section in layout.menuSections.data
                            li.menu-item
                                a(class='scrollto', href='#'+section.Section_Name_en )= section.Section_Name
                    span.rois-menu-line-thick
                    span.rois-menu-line-thin

	
block content
    div.page-content

block footer
    footer.container-fluid.footer-container
        div.container

block scripts
    //- script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js')
    //- script(src='/scripts/jQuery-2.1.4.min.js')

    script(src='/scripts/siteFunctions.js')
    script(src='/scripts/siteEvents.js')